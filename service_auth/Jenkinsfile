pipeline {
    agent any

    environment {
        APP_NAME = 'service-auth'
    }

    // Ajout de cette section pour charger Maven
    tools {
        maven 'M3' // <--- Ce nom doit être identique au nom configuré dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }
    }

    post {
        success { echo 'Build SUCCESS!' }
        failure { echo 'Build FAILED!' }
    }
}